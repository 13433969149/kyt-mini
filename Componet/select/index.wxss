.select_box{
  width: 166rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center; 
  border-radius: 100px;
  border: 1px solid #9A9A9A;
  font-size: 24rpx;
  color: #666;
  position: relative;
  margin-left: 18rpx;
 }
 .select{
  box-sizing: border-box;
  width: 100%;
  height: 70rpx;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 20rpx;
 }
 .select_text{
  margin-right: 20rpx;
 }
 .select_img{
  width: 22rpx;
  height: 12rpx;
  display: block;
  transition:transform 0.3s;
 }
 .select_img_rotate{
  transform:rotate(180deg); 
 }
 .option_box{
  position: absolute;
  top: 52rpx;
  width: 166rpx;
  left: 00rpx;
  box-sizing: border-box;
  height: 0;
  overflow-y: auto;
  border-top: 0;
  transition: height 0.3s;
  background: #fff;
  z-index: 100;
 }
 .option{
  display: block;
  line-height: 80rpx;
  border-bottom: 1px solid #efefef;
  text-align: center;
 }

