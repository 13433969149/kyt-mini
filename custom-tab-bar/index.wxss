.tab-bar {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    height: 48px;
    background: white;
    display: flex;
    padding-bottom: env(safe-area-inset-bottom);
    border-top: 1px solid #eaeaea;
    z-index: 10;
  }
   
  .tab-bar-item {
    flex: 1;
    text-align: center;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
  }
   
  .txt{
    font-size: 22rpx;
  }
 
  .center_img{
    width: 48rpx;
    height: 48rpx;    
  }
  .add{
    width: 92rpx;
    height: 92rpx;
    margin-top: -26rpx;
	
  }
  .add .center_img{
    width: 72rpx;
    height: 72rpx; 
    background: #fff;
    border-radius: 50%;
	padding: 10rpx;
  }

  .addPopup{
      position: fixed;
      width: 100%;
      height: 100%;
      left: 0;
      bottom: -1000px;
      background: rgba(0,0,0,0.5);
      z-index: 11;
      transition: all 0.3;
  }
  .addMain{
      background: #fff;
      padding: 100rpx 0 200rpx;
      border-radius: 10px 10px 0 0;
      position: absolute;
      bottom: 0rpx;
      width: 100%;
  }
  .list{
      display: flex;
      align-items: center;
      justify-content: space-between;
  }
  .item{
      flex: 1;
      display: flex;
      align-items: center;
      justify-content: center;
      flex-direction: column;
  }

  .addIcon{
      width: 130rpx;
      height: 130rpx;
  }
  .itemTxt{
      color: #666;
      margin-top: 30rpx;
  }
  .close{
      position: absolute;
      bottom: 50rpx;
      width: 72rpx;
      height: 72rpx;
      left: 50%;
      transform: translate(-50%);
  }
  cover-view,cover-image{
    overflow: initial; 
  }