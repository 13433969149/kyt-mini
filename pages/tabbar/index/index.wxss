/**index.wxss**/
page{
  padding-bottom: 130rpx;
}
.indexTopView{
  background: #fff;
}
.userInfo{
  padding: 27rpx 32rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #000;
}
.userImg{
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 25rpx;
}
.calendar{
  padding: 20rpx 0 30rpx;
}
.indexTopTab{
  padding: 46rpx 50rpx 37rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.tabLeft,.tabRight{
  display: flex;
  align-items: center;
}
.leftItem{
  font-size: 36rpx;
  color: #666;
  margin-right: 48rpx;
}
.tabRight{
  font-size: 28rpx;
  color: #343434;
}
.right_arrow{
  width: 16rpx;
  height: 26rpx;
  margin-left: 24rpx;
}

.DataKanban{
  padding: 20rpx;
}

.briefing{
  background: #fff;
  border-radius: 20rpx;
  padding: 0 30rpx;
  margin-bottom: 20rpx;
}
.briefingTitle{
  padding: 18rpx 0;
}
.briefingTitle,.titleRight{
  display: flex;
  align-items: center;
}
.titleLeft{
  flex: 1;
  color: #343434;
  font-size: 28rpx;
}
.more{
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666;
  margin-left: 42rpx;
}
.more image{
  margin-left: 14rpx;
}

.dataView{
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space-between;
  margin-top: 18rpx;
}
.dataItem{
  width: 25%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  margin-bottom: 48rpx;
}
.txt{
  font-size: 24rpx;
  color: #9A9A9A;
}
.num{
  color: #343434;
  font-size: 32rpx;
  margin-top: 26rpx;
}

