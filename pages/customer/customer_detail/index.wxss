/* pages/customer//customer_detail/index.wxss */
.userTop{
	background: #fff;
	padding: 20rpx 50rpx;
}
.userInfo{
	display: flex;
	align-items: flex-end;
}
.userImg{
	width: 120rpx;
	height: 120rpx;
	margin-right: 18rpx;
	position: relative;
}
.userRankView{
	position: absolute;
	bottom: -12rpx;
	left: 0;
}
.ImgIcon{
	width: 100%;
	height: 100%;
	border-radius: 50%;
}
.userOther{
	flex: 1;
	position: relative;
}
.edit{
	position: absolute;
	width: 52rpx;
	height: 52rpx;
	right: -36rpx;
	top: -6rpx;
}
.userName{
	display: flex;
	align-items: center;
	font-size: 30rpx;
}
.userStatus{
	background: #DBFEEA;
	height: 32rpx;
	font-size: 24rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	padding-right: 24rpx;
	margin-left: 26rpx;
}
.operation{
	display: flex;
	align-items: center;
	margin-top: 25rpx;
}
.btn{
	height: 40rpx;
	width: 140rpx;
	margin-right: 24rpx;
	font-size: 22rpx;
}
.userData{
	margin-top: 50rpx;
	display: flex;
	align-items: center;
	justify-content: space-between;
}
.dataItem{
	flex: 1;
	text-align: center;
	color: #A1A5A8;
	font-size: 20rpx;
}
.num{
	color: #000;
	font-size: 32rpx;
	margin-bottom: 25rpx;
}

.tab{
	margin-top: 20rpx;
}
.recordList{
	margin: 0 20rpx;
}
.recordItem{
	margin-top: 20rpx;
	background: #fff;
	padding-left: 26rpx;
	border-radius: 16rpx;
}
.itemTitle{
	padding: 34rpx 24rpx 18rpx;
	display: flex;
	align-items: center;
	justify-content: space-between;
}
.titleLeft{
	font-size: 28rpx;
	position: relative;
}
.titleLeft:after{
	content: '';
	position: absolute;
	top: 50%;
	left: -24rpx;
	transform: translateY(-50%);
	width: 11rpx;
	height: 33rpx;
	border-radius: 6rpx;
	background: #F47878;
}
.titleLeft.green:after{	
	background: linear-gradient(0deg, #00F79F, #00CC90);
}
.remarks{
	background: #F3F6F5;
	padding: 25rpx 30rpx;
	font-size: 28rpx;
	color: #333;
	line-height: 40rpx;
	margin-right: 24rpx;
	margin-top: 14rpx;
}
.time,.timeLeft{
	display: flex;
	align-items: center;
	color: #666;
	font-size: 24rpx;
}
.time{
	padding: 30rpx 24rpx 18rpx 0;
	justify-content: space-between;
}
.timeLeft image{
	width: 27rpx;
	height: 27rpx;
	margin-right: 10rpx;
}
.timeright{
	width: 26rpx;
	height: 16rpx;
}
.itemBotton,.itemBottonLeft,.bottomBtn{
	display: flex;
	align-items: center;
}
.itemBotton{
	padding: 20rpx 12rpx 20rpx 0;
}
.itemBottonLeft{
	flex: 1;
}
.bottomBtn{
	justify-content: center;
	font-size: 28rpx;
	padding: 14rpx 25rpx;
	border-radius: 20px;
	border: 1px solid #999;
	color: #A0A0A0;
}
.MainColor{
	background: rgba(0, 141, 93, 0.1);
	border-color: rgba(164, 206, 189, 0.93);
	margin-right: 36rpx;
}
.bottomBtn image{
	width: 28rpx;
	height: 28rpx;
	margin-right: 16rpx;
}

.customerInfo{
	margin-top: 20rpx;
	background: #fff;
	padding-left: 40rpx;
}
.infoItem{
	font-size: 28rpx;
	padding: 30rpx 24rpx 30rpx 0;
	color: #000;
	display: flex;
	align-items: top;
	line-height: 40rpx;
}
.label{
	color: #666;
	width: 160rpx;
}
.content{
	flex: 1;
}

.orderList{
	margin-top: 20rpx;
}

.listItem{
  background: #fff;
  padding-left: 36rpx;
  margin-bottom: 20rpx;
}
.itemTop{
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 24rpx;
  color: #656565;
  padding: 26rpx 36rpx 18rpx 0;
  border-bottom: 1px solid #e5e5e5;
}
.goodsItem{
  display: flex;
  align-items: center;
  padding: 20rpx 36rpx 20rpx 0;
  border-bottom: 1px solid #e5e5e5;
}
.goodsImgView image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 5rpx;
}
.goodsOther{
  flex: 1;
  margin-left: 36rpx;
  height: 120rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  font-size: 28rpx;
}
.goodsName{
  color: #000;
}
.userInfo,.orderStatus,.LookDetail{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.orderStatus{
  color: #333;
}
.LookDetail{
  color: #9F9F9F;
  display: flex;
  align-items: center;
}
.LookDetail image{
	width: 16rpx;
	height: 26rpx;
	margin-left: 15rpx;
}
.itemBottom{
  padding: 36rpx;
  font-size: 24rpx;
  color: #A5A3A5;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.itemBottom text{
  color: #333;
  font-size: 32rpx;
}
