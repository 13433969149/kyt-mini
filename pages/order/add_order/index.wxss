/* pages/order//add_order/index.wxss */
page{
    padding-bottom: env(safe-area-inset-bottom);
}
.customerInfoView{
    background: #fff;
    padding-left: 38rpx;
    border-top: 1px solid #e5e5e5;
    margin-bottom: 20rpx;
}
.customerInfoTitle{
    padding: 24rpx 48rpx 24rpx 28rpx;
    position: relative;
    border-bottom: 1px solid #e5e5e5;
    font-size: 28rpx;
    color: #000;
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.customerInfoTitle::after{
    content: '';
    position: absolute;
    width: 10rpx;
    height: 28rpx;
    top: 50%;
    transform: translateY(-50%);
    left: 0;
    background: #00C482;
    border-radius: 6rpx;
}
.customerInfo{
    padding: 16rpx 20rpx 16rpx 0;
}
.infoItem{
    display: flex;
    align-items: flex-start;
    padding: 15rpx 0;
    font-size: 24rpx;
    color: #656565;
    position: relative;
}
.label{
    line-height: 44rpx;
}
.content{
    flex: 1;
    margin-left: 44rpx;
    color: #212121;
    line-height: 44rpx;
    padding-right: 150rpx;
}
.modify{
    font-size: 24rpx;
    display: flex;
    align-items: center;
    position: absolute;
    top: 20rpx;
    right: 0;
}
.modify image,.orderBtn image{
    width: 14rpx;
    height: 24rpx;
    margin-left: 14rpx;
}
.goodsView,.paySnView,.payVoucherView{
    background: #fff;
    padding-left: 38rpx;
    margin-bottom: 20rpx;
}
.goodsList{
    padding: 0rpx 48rpx 20rpx 0;
}
.goodsItem{
    display: flex;
    align-items: center;
    margin-top: 20rpx;
}
.goodsImgView image{
    width: 120rpx;
    height: 120rpx;
    border-radius: 5rpx;    
}
.goodsOther{
    margin-left: 34rpx;
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    font-size: 28rpx;
    color: #000;
    height: 120rpx;
}
.goodsName{
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.squareAddReduce{
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.squareReduce,.squareAdd{
    width: 44rpx;
    height: 44rpx;
}
.squareinput{
    width: 120rpx;
    height: 56rpx;
    text-align: center;
}
.userInfo{
    color: #333;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.orderTotal{
    border-top: 1px solid #e5e5e5;
    padding: 24rpx 24rpx 24rpx 0;
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-size: 24rpx;    
}
.totalPrice{
    color: #656565;
}
.totalPrice text{
    font-size: 28rpx;
    color: #333;
}
.orderBtn{
    display: flex;
    align-items: center;
}
.paySnInputView{
    padding: 24rpx 24rpx 24rpx 0;
    font-size: 28rpx;  
    color: #333;  
}
.paySnInput{
    width: 100%;
}

.transaction{
    padding-bottom: 40rpx;
}
.transactionTitle{
    padding: 20rpx 0;
    font-size: 24rpx;
    color: #656565;
}
.transactionScreenshot{
    display: flex;
    align-items: center;
}
.transactionScreenshot image{
    margin-right: 24rpx;
}
.submit{
    width: auto;
    height: 94rpx;
    margin: 70rpx 40rpx 200rpx;
}

.addView{
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 36rpx 38rpx 36rpx 28rpx;
}
.addxx{
    font-size: 28rpx;
    color: #000;
}
.addView image{
    width: 16rpx;
    height: 26rpx;
}

.logisticsInfoPopup{
    width: 646rpx;
    position: relative;
    background: #fff;
    box-sizing: border-box;
}
.logisticsInfoPopupTitle{
    padding: 36rpx 0;
    font-size: 28rpx;
    color: #212121;
    text-align: center;
    border-bottom: 1px solid #e5e5e5;
}
.closeIcon{
    position: absolute;
    right: 38rpx;
    top: 36rpx;
    width: 30rpx;
    height: 30rpx;
}
.goodsListScroll{
    max-height: 710rpx;
}
.ItemGoods{
    display: flex;
    align-items: center;
    padding-left: 38rpx;
}
.checkBox{
    margin-right: 20rpx;
}
.checkBoxImg{
    width: 44rpx;
    height: 44rpx;
}
.ItemGoods .goodsItem{
    border-bottom: 1px solid #e5e5e5;
    flex: 1;
    padding-bottom: 20rpx;
    padding-right: 38rpx;
}
.popupBottom{
    padding: 24rpx 0;
    display: flex;
    align-items: center;
    justify-content: center;
    border-top: 1px solid #e5e5e5;
}
.popupBtn{
    width: 340rpx;
    height: 72rpx;
    border: 2rpx solid rgba(41, 159, 103, 0.93);
    border-radius: 34px;  
    font-size: 36rpx; 
    display: flex;
    align-items: center;
    justify-content: center;
}