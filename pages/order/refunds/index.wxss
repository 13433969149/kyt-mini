/* pages/order//refunds/index.wxss */
.customerInfoView{
    background: #fff;
    padding-left: 38rpx;
    border-top: 1px solid #e5e5e5;
    margin-bottom: 20rpx;
}
.customerInfoTitle{
    padding: 24rpx 48rpx 24rpx 28rpx;
    position: relative;
    border-bottom: 1px solid #e5e5e5;
    font-size: 28rpx;
    color: #000;
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.customerInfoTitle::after{
    content: '';
    position: absolute;
    width: 10rpx;
    height: 28rpx;
    top: 50%;
    transform: translateY(-50%);
    left: 0;
    background: #00C482;
    border-radius: 6rpx;
}
.customerInfo{
    padding: 16rpx 20rpx 16rpx 0;
}
.infoItem{
    display: flex;
    align-items: flex-start;
    padding: 15rpx 0;
    font-size: 24rpx;
    color: #656565;
}
.label{
    line-height: 44rpx;
    width: 150rpx;
}
.content{
    flex: 1;
    margin-left: 44rpx;
    color: #212121;
    line-height: 44rpx;
}
.itemView{
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    padding: 30rpx 38rpx 30rpx 0;
    font-size: 28rpx;
    color: #666;
    line-height: 40rpx;
}

.input{
    flex: 1;
    margin: 0 28rpx 0 40rpx;
}
.right_arrow{
    width: 16rpx;
    height: 26rpx;
}
.textarea{
    background: #f4f4f4;
    padding: 16rpx;
    width: 100%;
    box-sizing: border-box;
    font-size: 26rpx;
}

.bottomBtn{
    padding: 70rpx 40rpx;
}
.submitBtn{
    height: 94rpx;
}