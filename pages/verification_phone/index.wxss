/* pages/verification_phone/index.wxss */
page{
    background: #fff;
}
.phoneInfo{
    padding: 220rpx 60rpx 0 60rpx;
}
.InputItem{
    display: flex;
    align-items: center;
    padding: 30rpx 0;
    border-bottom: 1px solid #f1f1f1;
    margin-bottom: 70rpx;
}
.label{
    width: 100rpx;
    font-size: 32rpx;
    color: #000;
    font-weight: bold;
    border-right: 4rpx solid #E9E9E9;
    height: 32rpx;
    line-height: 32rpx;
}
.phoneInput{
    flex: 1;
    padding-left: 32rpx;
}
.verify-text.active {
    color: #9A9A9A !important;
}

.verify-text {
    font-size: 26rpx;
    font-weight: 400;
    padding: 0 26rpx 0 0;
    width: 200rpx;
    text-align: right;
    box-sizing: border-box;
}

.btn{
    margin-top: 90rpx;
    font-size: 36rpx;
    height: 94rpx;
    opacity: 0.5;
}
.active{
    opacity: 1;
}